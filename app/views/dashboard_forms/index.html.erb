<p style="color: green"><%= notice %></p>
<div class="rows">
  <div class="title col-3">
    <h2 class="Title"><strong>Hey Mum!</strong></h2>
  </div>
  <div class="description col-6">
    <h5>This is your dashboard for the Bosham Oil Syndicate *BOS*. </h5>
    <h5>If you would like to set up a new company slide, please select the 'New Company Button'. </h5>
  </div>
  <div class="end col-3">
    <%= link_to "Log out", destroy_admin_session_path, data: {turbo_method: :delete}, class: "btn btn-pink text-light text-uppercase rounded-pill fw-bold py-3 px-5" %>
  </div>
</div>
<div class="major_container">
  <div class="container3">
    <%# <div class="chicken"> %>
      <div class="row2">
        <div class="card3">
          <div class="card4">
            <strong>Name:</strong><br>
            <% InformationForm.all.each do |form|%>
              <%= form.name%><br>
            <% end %>
          </div>
            <div class="card4">
            <strong>Fuel Needed:</strong><br>
            <% InformationForm.all.each do |form|%>
              <%= form.fuel_needed %><br>
            <% end %>
          </div>
        </div>
      </div>
    <%# </div> %>
  </div>
  <div class="big_number">
          <p>
            <h3><strong>Fuel Needed: </strong></h3>
              <strong><%= InformationForm.all.sum(:fuel_needed) %> litres</strong>
          </p>
        </div>
  <div class="container2">
    <div class="row">
      <div class="card2 col-6 col-lg-3">
        <strong>Company Name:</strong><br>
        <strong>Representative Name:</strong><br>
        <strong>Phone Number:</strong><br>
        <strong>Pence Per Litre:</strong><br>
        <strong>Date of Call:</strong><br>
        <strong>Comment:</strong>
        <br>
        <%= link_to "New company", new_dashboard_form_path, class: "btn btn-pink text-light text-uppercase rounded-pill fw-bold py-3 px-5" %>
      </div>
      <div class="card col-6 col-lg-3">
        <div id="dashboard_forms">
          <% @dashboard_forms.each do |dashboard_form| %>
            <%= render dashboard_form %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
