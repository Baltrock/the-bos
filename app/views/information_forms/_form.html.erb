
<%= simple_form_for(@information_form) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :fuel_needed %>
    <%= f.input :phone_number %>
    <%= f.input :instructions_for_delivery %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-pink text-grey text-uppercase rounded-pill fw-bold" %>
  </div>
<% end %>
<br>
